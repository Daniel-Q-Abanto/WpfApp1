<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Listar"
                    FontSize="24"
                    Click="Button_Click"
                    Background="Red" Height="50" Width="200"/>
            <DataGrid x:Name="dgProfesores"></DataGrid>
            
            <Button Content="Cursos" 
                    FontSize="24"
                    Click="Button_Click_1"
                    Background="Green" Height="50" Width="200"/>
            <DataGrid x:Name="dgCurso"></DataGrid>


            <TextBox x:Name="txtNombres" Height="30" Width="200"/>
            <TextBox x:Name="txtApellidos" Height="30" Width="200"/>
            <Button Content="Agregar" 
                    FontSize="24"
                    Background="Yellow" Height="50" Width="200" Click="Button_Click_2"/>
            <DataGrid x:Name="dgAlumnos"></DataGrid>
           
        </StackPanel>
        
    </Grid>
</Window>
